generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Empresa {
    id         Int      @id @unique @default(autoincrement())
    name       String
    email      String   @unique
    cnpj_cpf   String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    Admins     Admin[]
    Categorias Categoria[]
    Produtos   Produto[]

    @@map("empresas")
}

model Admin {
    id         Int      @id @unique @default(autoincrement())
    name       String
    email      String   @unique
    password   String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    idEmpresa  Int

    empresa Empresa? @relation(fields: [idEmpresa], references: [id])

    @@map("admins")
}

model Categoria {
    id         Int      @id @unique @default(autoincrement())
    name       String
    created_at DateTime @default(now())
    idEmpresa  Int

    empresa Empresa? @relation(fields: [idEmpresa], references: [id])

    @@map("categorias")
}

model Produto {
    id                      Int      @id @unique @default(autoincrement())
    name                    String
    idCategoria             Int
    vlProduto               Float
    description             String
    qntdProdutosDisponiveis Int
    flProntaEntrega         Boolean  @default(false)
    flAtivo                 Boolean  @default(true)
    idEmpresa               Int
    flProdutoDestaque       Boolean  @default(false)
    created_at              DateTime @default(now())
    updated_at              DateTime @updatedAt

    Files File[]

    empresa Empresa? @relation(fields: [idEmpresa], references: [id])

    @@map("produtos")
}

model File {
    id         Int      @id @unique @default(autoincrement())
    name       String
    path       String
    type       String
    idProduto  Int
    created_at DateTime @default(now())

    produto Produto @relation(fields: [idProduto], references: [id])

    @@map("files")
}

model Upload {
    id         Int      @id @unique @default(autoincrement())
    name       String
    path       String
    type       String
    idProduto  Int
    created_at DateTime @default(now())

    @@map("uploads")
}
